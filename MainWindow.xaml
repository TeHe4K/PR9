<Window x:Class="PR9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="0,0,547,0">
            <Image Source="Images\WarNoArmor.png" Margin="10,25,-1,217" />
            <Label Content="Воин без доспехов" HorizontalAlignment="Center" Margin="0,251,0,0" VerticalAlignment="Top" Width="233"/>
            <Label Content="Здоровье: " x:Name="NoShield" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top" Width="115"/>
            <Button Content="Удар" Click="NoArmor" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Width="233" Height="29"/>
        </Grid>

        <Grid Margin="274,0,274,0">
            <Image Source="Images\WarLightArmor.png" Margin="10,25,-1,217" />
            <Label Content="Воин с легкими доспехами" HorizontalAlignment="Center" Margin="0,251,0,0" VerticalAlignment="Top" Width="233"/>
            <Label Content="Здоровье: " x:Name="lightShield" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top" Width="115"/>
            <Button Content="Удар" Click="LightArmor" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Width="233" Height="29"/>
        </Grid>

        <Grid Margin="548,0,0,0">
            <Image Source="Images\WarHeavyArmor.png" Margin="10,25,-1,217" />
            <Label Content="Воин тяжелыми" HorizontalAlignment="Center" Margin="0,251,0,0" VerticalAlignment="Top" Width="233"/>
            <Label Content="Здоровье: " x:Name="HeavyShield" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top" Width="115"/>
            <Button Content="Удар" Click="HeavyArmor" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Width="233" Height="29"/>
        </Grid>
    </Grid>
</Window>
